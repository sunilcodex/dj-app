<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_audio_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
	android:background="@color/background_main" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/playlist1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="false" />

            <TextView
                android:id="@+id/now_playing_text_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/noSongPlaying"
                android:textSize="16sp"
                android:textStyle="italic" />
            
                        <TextView
                android:id="@+id/current_position_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/noSongPlaying"
                android:textSize="16sp"
                android:textStyle="italic" />
            
                       
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/prev1"
                   android:background="@color/background_main"
                     android:layout_width="90dp"
                    android:layout_height="92dp"
                    android:contentDescription="@string/prev"
                    android:src="@drawable/prevbutton" />

                <ImageButton
                    android:id="@+id/play1"
                    android:background="@color/background_main"
                    android:layout_width="90dp"
                    android:layout_height="92dp"
                    android:contentDescription="@string/play"
                    android:src="@drawable/playbutton" />

                <ImageButton
                    android:id="@+id/next1"
                    android:background="@color/background_main"
                    android:layout_width="90dp"
                    android:layout_height="92dp"
                    android:contentDescription="@string/next"
                    android:src="@drawable/nextbutton" />
            </LinearLayout>
<com.example.DJApp.WaveformView android:id="@+id/waveform"
       android:layout_width="fill_parent"
       android:layout_height="105dp"
      android:background="@drawable/lower_bg" />
<com.example.DJApp.WaveformView android:id="@+id/waveform1"
       android:layout_width="fill_parent"
       android:layout_height="105dp"
      android:background="@drawable/lower_bg" />

</LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/playlist2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawSelectorOnTop="false" />

            <TextView
                android:id="@+id/now_playing_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/noSongPlaying"
                android:textSize="16sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/prev2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/prev"
                    android:src="@drawable/prevbutton" />

                <ImageButton
                    android:id="@+id/play2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/play"
                    android:src="@drawable/playbutton" />

                <ImageButton
                    android:id="@+id/next2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/next"
                    android:src="@drawable/nextbutton" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
  
   <SeekBar
        android:id="@+id/fader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:secondaryProgress="0"
        android:progressDrawable="@drawable/lower_bg"
        android:thumb="@drawable/slider"
/>
    
</LinearLayout>
